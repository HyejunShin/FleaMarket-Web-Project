<h2>Add Item</h2>
<script defer type="module" src="/js/validate-add-item.js"></script>
<div id="content"> 
{{#if message}}
<div class="error">{{ message }}</div>
{{/if}}
<form method="POST" action="" enctype="multipart/form-data"> <!--enctype="multipart/form-data"-->
    <div class="form-group row">
        <label for="title" class="col-sm-1 col-form-label">Title</label>
        <div class="col-sm-8">
            <input type="text" name="title" class="form-control" placeholder="Title">
            <div id="titleMsg" class="validation"></div>
        </div>
    </div>
    <div class="form-group row">
        <label for="category" class="col-sm-1 col-form-label">Category</label>
        <div class="col-sm-3">
            <select class="custom-select" name="category">
                <option value="" disabled selected>Category</option>
                <option value="furnitures">Furnitures</option>
                <option value="clothes">Clothes</option>
                <option value="books">Books</option>
                <option value="hobbies">Hobbies</option>
                <option value="others">Others</option>
            </select>
            <div id="categoryMsg" class="validation"></div>
        </div>
    </div>
    <div class="form-group row">
        <label for="price" class="col-sm-1 col-form-label">Price</label>
        <div class="col-sm-3">
            <input type="text" name="price" class="form-control" placeholder="Price">
            <div id="priceMsg" class="validation"></div>
        </div>
    </div>
    <div class="form-group row">
        <label for="description" class="col-sm-1 col-form-label">Description</label>
        <div class="col-sm-8">
            <textarea class="form-control" name="description" rows="8" placeholder="Description"></textarea>
            <div id="descriptionMsg" class="validation"></div>
        </div>
    </div>
    <div class="form-group row">
        <label for="image" class="col-sm-1 col-form-label">Image</label>
        <div class="col-sm-3">
            <input type="file" name="image" class="form-control-file border"/>
        </div>
    </div>
    <div>
		<input type="submit" class="btn btn-success btn-lg" value="Add New Item">
	</div>
</form>
</div>